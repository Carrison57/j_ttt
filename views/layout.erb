<!doctype html>
<html lang='en'>
    <head>
        <title><%= @title %></title>
        <meta charset='utf-8'>
        <link rel='stylesheet' type='text/css' href='styles.css'>
    </head>
    <body>
    	<div class="header-container">
            <h1 id="header"><a href="/">Tic Tac Toe Game</a></h1>
        </div>
        
        <div class="body-container">
    		<form id='squareForm' action='/get_player_move' method='post'>
                <table id='board'>
        		  <tr>
            		  <td id='top-left'><input class="board-att" type='submit' name='square' value='<%=board[0]%>'></td>
            		  <td id='top-center'><input class="board-att" type="submit" name="square" value="<%=board[1]%>"></td>
            		  <td id='top-right'><input class="board-att" type='submit' name='square' value='<%=board[2]%>'></td>
        		  </tr>
        		  <tr>
            		  <td id='middle-left'><input class="board-att" type='submit' name='square' value='<%=board[3]%>'></td>
            		  <td id='center'><input class="board-att" type='submit' name='square' value='<%=board[4]%>'></td>
            		  <td id='middle-right'><input class="board-att" type='submit' name='square' value='<%=board[5]%>'></td>
        		  </tr>
        		  <tr>
            		  <td id='bottom-left'><input class="board-att" type='submit' name='square' value='<%=board[6]%>'></td>
            		  <td id='bottom-center'><input class="board-att" type='submit' name='square' value='<%=board[7]%>'></td>
            		  <td id='bottom-right'><input class="board-att" type='submit' name='square' value='<%=board[8]%>'></td>
        		  </tr>
    		    </table>
            </form>
        </div>
		<%= yield %>
    </body>
</html>
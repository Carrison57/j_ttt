<h1 id="header">Tic Tac Toe Game</h1>

<table id='board'>
    <tr>
        <td id='top-left'><%= board[0] %></td>
        <td id='top-center'><%= board[1] %></td>
        <td id='top-right'><%= board[2] %></td>
    </tr>
    <tr>
        <td id='middle-left'><%= board[3] %></td>
        <td id='center'><%= board[4] %></td>
        <td id='middle-right'><%= board[5] %></td>
    </tr>
    <tr>
        <td id='bottom-left'><%= board[6] %></td>
        <td id='bottom-center'><%= board[7] %></td>
        <td id='bottom-right'><%= board[8] %></td>
    </tr>
</table>

<form action='game' method='post'>
    <p>Player one will X</p>
        <select name='player_1'>
            <option value='human'>Human</option>
            <option value='sequential_ai'>SequentialAI</option>
            <option value='random_ai'>RandomAI</option>
            <option value='unbeatable_ai'>UnbeatableAI</option>
        </select>

        <p>Player two will O</p>
        <select name='player_2'>
            <option value='human'>Human</option>
            <option value='sequential_ai'>SequentialAI</option>
            <option value='random_ai'>RandomAI</option>
            <option value='unbeatable_ai'>UnbeatableAI</option>
        </select><br><br>
        <input type="submit" value="Submit">
</form> 